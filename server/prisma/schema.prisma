generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String         @id @default(uuid())
  email           String         @unique
  password        String
  name            String
  role            UserRole
  gender          Gender?
  avatarUrl       String?
  isVerified      Boolean        @default(false)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  attendances     Attendance[]  @relation("AttendanceUser")
  menteeProfile   MenteeProfile?
  mentorProfile   MentorProfile?
  joinedClasses   Class[]        @relation("ClassMentee")
  mentoredClasses Class[]        @relation("ClassMentor")
  managedOrgs     Organization[] @relation("OrgManager")
  memberOrgs      Organization[] @relation("OrgMember")
  createdSessions Session[]      @relation("SessionCreator")
  markedAttendances Attendance[] @relation("AttendanceMarker")
}

model MentorProfile {
  id                String            @id @default(uuid())
  userId            String            @unique
  currentJob        String
  company           String
  experienceYears   Int
  linkedinUrl       String?
  expertise         String[]
  motivation        String
  availability      String[]
  applicationStatus ApplicationStatus @default(PENDING)
  rejectionReason   String?
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  user              User              @relation(fields: [userId], references: [id])
}

model MenteeProfile {
  id        String   @id @default(uuid())
  userId    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model Organization {
  id          String   @id @default(uuid())
  name        String
  description String?
  logoUrl     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  classes     Class[]
  managers    User[]   @relation("OrgManager")
  members     User[]   @relation("OrgMember")
}

model Class {
  id             String        @id @default(uuid())
  name           String
  description    String?
  code           String        @unique
  organizationId String?
  startDate      DateTime?
  endDate        DateTime?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  organization   Organization? @relation(fields: [organizationId], references: [id])
  sessions       Session[]
  mentees        User[]        @relation("ClassMentee")
  mentors        User[]        @relation("ClassMentor")
}

model Session {
  id                   String       @id @default(uuid())
  title                String
  description          String?
  startTime            DateTime
  endTime              DateTime?
  type                 SessionType
  location             String?
  meetingUrl           String?
  checkInWindowMinutes Int          @default(15)
  checkInCloseMinutes  Int          @default(30)
  classId              String
  createdBy            String
  createdAt            DateTime     @default(now())
  updatedAt            DateTime     @updatedAt
  attendances          Attendance[]
  class                Class        @relation(fields: [classId], references: [id])
  creator              User         @relation("SessionCreator", fields: [createdBy], references: [id])
}

model Attendance {
  id          String           @id @default(uuid())
  sessionId   String
  userId      String
  status      AttendanceStatus
  checkInTime DateTime?
  notes       String?
  markedBy    String?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  session     Session          @relation(fields: [sessionId], references: [id])
  user        User             @relation("AttendanceUser", fields: [userId], references: [id])
  marker      User?            @relation("AttendanceMarker", fields: [markedBy], references: [id])

  @@unique([sessionId, userId])
}

enum UserRole {
  ADMIN
  MANAGER
  MENTOR
  MENTEE
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum ApplicationStatus {
  PENDING
  APPROVED
  REJECTED
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  PERMIT
  SICK
}

enum SessionType {
  ONLINE
  OFFLINE
}
