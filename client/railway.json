{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "client/Dockerfile",
    "dockerContext": "..",
    "args": {
      "NEXT_PUBLIC_API_URL": "$NEXT_PUBLIC_API_URL"
    }
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

